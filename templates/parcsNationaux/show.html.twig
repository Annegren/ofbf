{# templates/article/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %} Articles pnx {% endblock %}

{% block body %}

	{% if articles %}
		
		<div id="pnxIMG"></br>
		<h1 class="text-end p-5">
			<h1 class="mt-5 text-center" style="color:#fefee2">
			{{ articles.0.parcsnationaux.name }}
			</h1>
		</div>
		<section id="new" class="p-4">
	<div class="d-lg-flex flex-wrap mt-2">
				{% for article in articles | reverse %}
			<div class="card-group mb-3 col-lg-4 px-lg-2">
						<div class="card shadow p-3 col m-3" style="width: 18rem;">
						<img src="{{ vich_uploader_asset(article,'imageFile')}}" class="card-img-top" alt="...">
							<div class="card-body">
								<div class="text-center">
									<h3 class="card-title" style="color:#5E9064">
										{{ article.title }}</h3>
									<li class="card-text" style="color:#424DAB">
										sous catégorie :
										{{ article.parcsNationaux.name }}</li></br>
								    <li class="card-text" style="color:#424DAB">
										catégorie :
										{{ article.category.name }}</li></br>
									
									<div class="card-footer">
									<a href="{{path("article_show", { id: article.id }) }}"style="color:#424DAB">
										En savoir plus
									</div>
									</a>
								</div>
							</div>
						</div>
					</div>
				{% else %}
					aucun article trouvé
				{% endfor %}
			{% endif %}
		</div>
	</section>
<div class="p-5 text-end">
	<button type="button" class="my-3 p-1 btn btn-outline-light text-reset"><a href="#" class="link-blue" > ↑ </a></button>
</div>

{% endblock %}
