{# templates/article/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %} Articles pnx {% endblock %}

{% block body %}

	{% if articles %}
		
		<div id="ofbIMG"></br>
		<h1 class="text-end p-5">
			<h1 class="mt-5 text-center" style="color:#fefee2">
				
			{{ articles.0.ofb.name }}
			</h1>
		</div>

		<section id="new" class="p-4">
			<div class="row mt-2">
				{% for article in articles | reverse %}
					<div class="card-group mb-3 col-4">
						<div class="card shadow p-3 col m-3" style="width: 18rem;">
						<img src="{{ vich_uploader_asset(article,'imageFile')}}" class="card-img-top" alt="...">
							<div class="card-body">
								<div class="text-center">
									<h3 class="card-title">
										{{ article.title }}</h3>
									
										- sous catégorie :
										{{ article.ofb.name }}</p>
									<p>
										- catégorie :
										{{ article.category.name }}</p>
									
									<div class="card-footer">
									<a href="{{path("article_show", { id: article.id }) }}">
										En savoir plus
									</div>
									</a>
								</div>
							</div>
						</div>
					</div>
				{% else %}
					aucun article trouvé
				{% endfor %}
			{% endif %}
		</div>
	</section>
<div class="p-5 text-end">
	<button type="button" class="my-3 p-1 btn btn-outline-dark text-reset"><a href="#" class="link-dark" > ↑ </a></button>
</div>

{% endblock %}
