{% extends 'base.html.twig' %}

{% block title %}Article #{{ article.id }}
{% endblock %}

{% block body %}
<section class="container p-5 col-5">
<div class="card shadow p-3 mb-5 bg-white rounded"style="width: 30rem;">
  <img src="{{article.poster}}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">{{  article.title }}</h5>
			<p>{{ article.description }}</p>
			<p>Catégorie :
				<a href>{{ article.category.name }}</a></p>

            {% if (article.category.name == 'Ofb') %}
           <p> sous-catégorie:
			<a href>{{ article.subCategory.name }}</a></p>
           {% elseif (article.category.name== 'Parcs Nationaux') %}
           <p> sous-catégorie :
			<a href>{{ article.subCategory.name }}</a></p>
			{% endif %}

			
	</div>
	</div>
	</section>

	<div class="p-5 text-end">
	<button type="button" class="btn btn-light"><a href="{{ path('article_index') }}"> Retour à la liste des programmes</a></button>
	</div>
	
{% endblock %}
